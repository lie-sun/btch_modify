page,
.container{
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #f2f2f2;
}
.tab-content{
  padding-bottom: 68rpx;
}
.header{
  height: 60rpx;
  line-height: 60rpx;
  padding: 40rpx 0;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  position: relative;
  font-size: 28rpx;
}
.header .mode{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  border: 1px solid #333;
  border-radius: 8px;
  color: #333;
  background-color: #fff;
}
.header .mode .answer-mode,
.header .mode .back-mode{
  padding: 0 20rpx;
}
.header .mode .answer-mode{
  border-radius: 6px 0 0 6px;
}
.header .mode .back-mode{
  border-radius: 0 6px 6px 0;
}
.header .mode .active{
  color: #fff;
  background-color: #333;
}
.header .select{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  right: 28rpx;
}
.header .select image{
  width: 50rpx;
  height: 50rpx;
  display: block;
}
.header .select .page{
  margin-left: 8rpx;
}
.panel{
  position: absolute;
  width: 100%;
  height: 100%;
  padding-bottom: 80rpx;
  z-index: 999;
  top: 0;
  left: 0;
  background-color: #f2f2f2;
}
.panel .close{
  padding: 20rpx 0;
}
.panel .close image{
  width: 32px;
  height: 32px;
  display: block;
  margin: 0 auto;
}

.panel .panel-content{
  padding: 20rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #fff;
}
.panel .panel-content .panel-item{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
  color: #a9a9a9;
  font-weight: 400;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  border: 1px solid #f2f2f2;
}
.panel .panel-content .panel-item.bg{
  background-color: #fff;
}
.panel .panel-content .panel-item.yes{
  color: #fff;
  background-color: rgb(0, 153, 0);
}
.panel .panel-content .panel-item.no{
  color: #fff;
  background-color: rgb(237, 109, 0);
}
.tab-content .pic image{
    width: 100%;
    display: block;
}
.tab-content .router{
    padding-top: 12px;
    padding-left: 10px;
    margin-bottom: 25px;
    color: #ff0033;
    font-size: 32rpx;
}
.subject-item{
    font-size: 32rpx;
    background-color: #fff;
}
.subject-item .item .title{
    padding-left: 24px;
    padding-bottom: 10px;
    background-color: #f2f2f2;
}
.subject-item .item .radio-wrapper{
    margin: 2px 0;
    position: relative;
    background-color: #f2f2f2;
    
}
.subject-item .item .radio{
    width: 100%;
    display: flex;
    display: -webkit-flex;
    padding: 10px 10px 10px 20px;
}
.subject-item .item .radio text{
  padding-right: 20px;
}
.subject-item .item .radio radio,
.subject-item .item .radio .topic{
  vertical-align: middle;
}
.subject-item .item .radio.active{
  color:#ff0033;
}
.subject-item .item .radio.correct{
  color:rgb(8, 131, 8);
}
.subject-item .item .radio image{
    width: 24px;
    height: 24px;
    position: absolute;
    top: 50%;
    right: 12px;
    margin-top: -12px;
}
.subject-item .item .correct{
    padding-top: 10px;
    padding-left: 20px;
    color: #ff0033;
    background-color: #f2f2f2;
}
.subject-item .item .btn-wrapper{
    padding: 10px 40px;
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: #f2f2f2;
}
.subject-item .item .btn-wrapper .btn{
    height: 40px;
    padding: 0 40px;
    line-height: 40px;
    color: #fff;
    border-radius: 6px;
}
.subject-item .item .btn-wrapper .btn-prev.btn-center{
  margin: 0 auto;
}
.subject-item .item .btn-wrapper .btn-next{
    margin: 0 auto;
    background-color: #ff6666;
}
.subject-item .item .btn-wrapper .btn-prev{
    margin: 0 auto;
    background-color: #169bd5;
}
.record{
  width: 100%;
  height: 68rpx;
  position: fixed;
  z-index: 99;
  left: 0;
  bottom: 0;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  line-height: 68rpx;
  background-color: #fff;
}
.record .pic{
  width: 32rpx;
  height: 32rpx;
  display: block;
}
.record .yes,
.record .no{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
}
.record .no{
  margin-right: 80rpx;
}
.record .yes text,
.record .no text{
  margin-left: 8rpx;
}
.record .yes{
  color: rgb(0, 153, 0);
}
.record .no{
  color: rgb(237, 109, 0);
  margin-left: 20rpx;
}