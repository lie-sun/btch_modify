.title-pic{
    width: 100%;
    margin-bottom: 40px;
}
.title-pic image{
    width: 100%;
    display: block;
}
.title-btn{
    width: 90%;
    margin: 0 auto;
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
}
.title-btn .flex{
  flex: 1;
  -wekit-flex: 1;
}
.title-btn .btn{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 32rpx;
}
.title-btn .btn image{
  width: 120rpx;
  height: 120rpx;
  display: block;
}
.title-btn .center{
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
}
.title-btn .order-btn{
  width: 280rpx;
  height: 280rpx;
  color: #fff;
  border-radius: 50%;
  background-color: #f2f2f2;
}
.title-btn .order-wrapper{
  width: 230rpx;
  height: 230rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #fff;
}
.title-btn .order-inner{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #00b482;
}
.title-btn .random-btn{
  margin-bottom: 80rpx;
}

.title-btn .error-btn{
  margin-bottom: 80rpx;
}
