/* pages/authorized/authorized.wxss */
page{
  width: 100%;
  height: 100%;
}
.auth-pic{
  width: 240rpx;
  height: 240rpx;
  margin: 80rpx auto;
}
.auth-pic image{
  width: 100%;
  height: 100%;
}
.auth-btn{
  padding: 0 15px;
}
.auth-desc{
  margin-bottom: 40rpx;
  color: #878787;
  font-size: 30rpx;
  text-align: center;
}
.auth-btn .btn{
  height: 100rpx;
  line-height: 100rpx;
}
.auth-btn .auth-btn-login{
  margin-bottom: 40rpx;
  color: #fff;
  font-size: 32rpx;
  background-color: #3871a8;
}
.auth-btn .auth-btn-back{
  color: #333;
  font-size: 32rpx;
  background-color: #fff;
}
.auth-btn .btn-hover-login{
  color: rgba(255,255,255,0.6);
  background-color: #256aad;
}
.tip-wrapper{
  height: 100%;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}