/* pages/rent/rent-detail/rent-detail.wxss */
page{
  width: 100%;
  height: 100%;
  font-family: "Microsoft YaHei";
  background-color: #f7f7f7;
}
.swiper-section swiper-item image{
  width: 100%;
  height: 100%;
  display: block;
}
.goods-info{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.goods-info .goods-name{
  margin-bottom: 2px;
  color: #353535;
  font-size: 16px;
  font-weight: bold;
}

.goods-info .goods-desc {
  font-size: 30rpx;
  color: #9b9b9b;
}

.goods-info .goods-net text {
  margin-left: 8rpx;
  color: #4270a1;
  font-size: 28rpx;
}

.goods-info .goods-net image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.dealer-wrapper .dealer-title {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  padding: 10px 0;
  font-size: 28rpx;
  color: #888;
}

.dealer-wrapper {
  margin-bottom: 10px;
}

.dealer-wrapper .dealer-title .line {
  width: 160rpx;
  height: 1px;
  background-color: #eaeaea;
}

.dealer-wrapper .dealer-title .txt {
  padding: 0 14px;
}

.dealer-wrapper .dealer-content {
  padding-left: 30rpx;
  background-color: #fff;
}

.dealer-wrapper .dealer-content .dealer-item {
  padding: 40rpx 0;
  display: flex;
  display: -webkit-flex;
  border-bottom: 1px solid #f5f5f5;
}

.dealer-wrapper .dealer-content .dealer-item:last-child{
  border-bottom: 0px;
}

.dealer-wrapper .dealer-content .dealer-item .dealer-pic {
  width: 140rpx;
  flex: 0 0 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.dealer-wrapper .dealer-content .dealer-item .dealer-detail {
  margin-left: 30rpx;
  font-size: 28rpx;
}

.dealer-wrapper .dealer-content .dealer-item .dealer-detail .title {
  margin-bottom: 4rpx;
  color: #476d9b;
  font-weight: bold;
}

.dealer-wrapper .dealer-content .dealer-item .dealer-detail .address {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  margin-bottom: 24rpx;
  color: #b9b9b9;
}

.dealer-wrapper .dealer-content .dealer-item .dealer-detail .address .addr-detail{
  width: 360rpx;
  margin-left: 4rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.dealer-wrapper .dealer-content .dealer-item .dealer-detail .addr-pic {
  width: 25rpx;
  height: 34rpx;
  flex: 0 0 25rpx;
}

.dealer-wrapper .dealer-content .dealer-item .dealer-detail .dealer-proxy {
  margin-bottom: 4rpx;
}

.dealer-wrapper .dealer-content .dealer-item .dealer-detail .dealer-name {
  font-weight: bold;
}

.dealer-wrapper .dealer-content .dealer-item .dealer-detail .concat .tel{
  margin-left: 8rpx;
  color: #ff3333;
  font-style: italic;
}

.dealer-wrapper .dealer-content .dealer-item .dealer-detail .concat .dail {
  margin-left: 16rpx;
  display: inline-block;
  padding: 4rpx 14rpx;
  color: #fff;
  font-size: 24rpx;
  border-radius: 2px;
  background-color: #169bd5;
}

.page{
  background-color: #fff;
}
.weui-navbar__item {
  font-weight: bold;
}
.weui-navbar__item.weui-bar__item_on{
  color: #3871a8;
  font-weight: bold;
}
.weui-navbar__slider{
  width: 25%;/*3.2em;*/ 
  height: 2px;
  /* margin-left: -1.6em; */
  background-color: #3871a8;
}
.weui-tab__content{
  padding: 25px 15px 45px 15px;
  color: #888;
  font-size: 14px;
}
.weui-tab__content .item{
  margin-bottom: 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.weui-tab__content .item:last-child{
  margin-bottom: 0px;
}
.contact-btn{
  width: 80%;
  position: fixed;
  left: 10%;
  bottom: 20px;
}
.contact-btn .contact{
  height: 45px;
  line-height: 45px;
  color: #fff;
  font-size: 16px;
  border-radius: 5px;
  background-color: #3871a8;
}
.contact-btn button[loading][disabled]{
  color: rgba(255,255,255,0.6);
  background-color: #1463af;
}
.contact-btn button.btn-hover{
  color: rgba(255,255,255,0.6);
  background-color: #1463af;
}
.desc{
  color: #353535;
  text-indent: 2em;
  font-size: 28rpx;
  line-height: 25px;
}