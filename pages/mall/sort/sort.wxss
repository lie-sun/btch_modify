/* pages/mall/sort/sort.wxss */
page {
  height: 100%;
  background-color: #f7f7f7;
}

.sort-wrapper {
  padding: 34rpx 20rpx 10rpx 20rpx;
  background-color: #fff;
}

.sort-panel {
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
  justify-content: space-between;
  color: #888;
  font-size: 30rpx;
}

.sort-panel::after {
  content: '';
  width: 30%;
}

.sort-panel .item {
  width: 30%;
  flex: 0 0 30%;
  padding: 4rpx 0;
  margin-bottom: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
}

.sort-panel .item:first-child{
  margin-left: 0px;
}

.sort-panel .item.active {
  color: #3871a8;
  border-radius: 20px;
  border: 1px solid #3871a8;
}