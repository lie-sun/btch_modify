/* pages/rent/rent-detail/rent-detail.wxss */
page{
  width: 100%;
  height: 100%;
  font-family: "Microsoft YaHei";
  background-color: #f7f7f7;
}
.swiper-section swiper-item image{
  width: 100%;
  height: 100%;
  display: block;
}
.goods-info{
  padding: 20px 15px;
  margin-bottom: 10px;
  background-color: #fff;
}
.goods-info .goods-name{
  margin-bottom: 8px;
  color: #353535;
  font-size: 16px;
  font-weight: bold;
}
.goods-info .goods-rent_count{
  margin-bottom: 8px;
}
.goods-info .goods-rent_count .goods-rent{
  margin-bottom: 8px;
  color: #ff585e;
  font-size: 12px;
}
.goods-info .goods-rent_count .goods-rent .goods-day_rent{
  margin-right: 4px;
  font-size: 18px;
  font-weight: bold;
}
.goods-rent_count .goods-rent .goods-day_rent .mark{
  font-size: 12px;
  font-weight: bold;
}
.goods-info .goods-rent_count .goods-count{
  float: right;
  color: #888;
  font-size: 14px;
}
.goods-info .goods-deposit_addr{
  color: #888;
  font-size: 14px;
}
.goods-info .goods-deposit_addr .goods-addr{
  float: right;
}

.page{
  padding-bottom: 40px;
  background-color: #fff;
}
weui-navbar__title{
  color: #353535;
}
.weui-navbar__item.weui-bar__item_on{
  color: #3871a8;
}
.weui-navbar__slider{
  width: 25%;/*3.2em;*/ 
  height: 2px;
  /* margin-left: -1.6em; */
  background-color: #3871a8;
}
.weui-tab__content{
  padding: 25px 15px 45px 15px;
  color: #888;
  font-size: 14px;
}
.weui-tab__content .item{
  margin-bottom: 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.weui-tab__content .item:last-child{
  margin-bottom: 0px;
}
.contact-btn{
  width: 80%;
  position: fixed;
  left: 10%;
  bottom: 20px;
}
.contact-btn .contact{
  height: 45px;
  line-height: 45px;
  color: #fff;
  font-size: 16px;
  border-radius: 5px;
  background-color: #3871a8;
}
.contact-btn button[loading][disabled]{
  color: rgba(255,255,255,0.6);
  background-color: #1463af;
}
.contact-btn button.btn-hover{
  color: rgba(255,255,255,0.6);
  background-color: #1463af;
}
.desc{
  color: #353535;
  text-indent: 2em;
  font-size: 28rpx;
  line-height: 25px;
}

.rent-wrap {
  height: 90rpx;
  padding-left: 30rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f5eded;
  font-size: 28rpx;
}

.rent-wrap .rent-price {
  color: #ec0a0a;
  font-weight: bold;
}

.rent-wrap .rent-pick{
  height: 100%;
  padding: 0 30rpx;
  line-height: 90rpx;
  color: #fff;
  background-color: #ff4b5b;
}

.rent-content {
  width: 100%;
  padding: 20rpx 0;
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  background-color: #e8e3e3;
}

.rent-content .rent-detail {
  margin: 0 20rpx;
}

.rent-content .rent-head {
  margin-bottom: 30rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}

.rent-content .rent-head .pic {
  width: 178rpx;
  height: 178rpx;
  display: block;
  border: 2px solid #bec2c9;
}

.rent-content .rent-head .info {
  margin-left: 16rpx;
  font-size: 28rpx;
}

.rent-content .rent-head .info .info-rent {
  color: rgb(236, 10, 10);
}

.rent-content .rent-head .info .info-rent text {
  font-weight: bold;
}

.rent-info-wrap {
  margin-bottom:30rpx;
  font-size: 28rpx;
}

.rent-info-wrap .rent-item {
  padding: 20rpx 0;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  border-bottom: 1px solid #fff;
}

.rent-info-wrap .rent-item-days{
  padding: 20rpx 0;
  border-bottom: 1px solid #fff;
}

.rent-info-wrap .rent-item .label,
.rent-info-wrap .rent-item-days .label {
  color: #b95e5e;
}

.rent-info-wrap .rent-item-days .label {
  margin-bottom: 20rpx;
}

.rent-info-wrap .rent-item .change-count {
  display: flex;
  display: -webkit-flex;
}

.rent-info-wrap .rent-item .change-count .change {
  width:40rpx;
  height:36rpx;
  border-radius:10rpx;
  line-height:36rpx;
  text-align:center;
  border:1px solid #bbb;
  background-color: #fff;
}

.rent-info-wrap .rent-item .change-count .count {
  margin:0 24rpx;
}

.rent-info-wrap .rent-item-days .date-wrap{
  padding-left: 10rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
}

.rent-info-wrap .rent-item-days .date-wrap .name {
  margin-bottom: 20rpx;
  color: #b87e2a;
}

.rent-info-wrap .rent-item-days .date-wrap .days {
  padding: 16rpx;
  border: 2px solid #bbb;
  border-radius: 100%;
  background-color: #fff;
}

.rent-info-wrap .rent-item-days .date-wrap .end-date .name {
  text-align: right;
}

.rent-info-wrap .rent-item .radio-group {
  display:flex;
  display:-webkit-flex;
}

.rent-info-wrap .rent-item .radio-group .weui-cell {
  padding: 0px;
}

.rent-detail .rent-confirm {
  margin: 0 30rpx;
  padding: 12rpx 0;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  border-radius: 5px;
  background-color: #2e3769;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,.5);
}