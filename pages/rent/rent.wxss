/* pages/rent/rent.wxss */
page,
.container{
  width: 100%;
  height: 100%;
}
.container,
scroll-view{
  background-color: #f7f7f7;
}

.bg_pic {
  height: 340rpx;
}

.bg_pic image {
  width: 100%;
  height: 100%;
  display: block;
}

.box-wrap {
  margin: 0 20rpx;
  margin-top: -18rpx;
  background-color: #fff;
  border-radius: 6px;
  border: 1px solid #bbb;
  box-shadow: 0px 4px 4px rgba(0,0,0,0.5);
}

.box-wrap .switch-wrap {
  padding: 16rpx 0;
  display: flex;
  display: -webkit-flex;
  font-size: 32rpx;
  border-bottom: 1px solid #bbb;
}

.box-wrap .switch-wrap .switch-item {
  flex: 1;
  text-align: center;
}

.box-wrap .switch-wrap .switch-item.active text{
  color: #b87e2a;
  border-bottom: 6rpx solid #b87e2a;
}

.box-wrap .switch-content {
  padding: 20rpx 0;
}

.switch-content .content {
  margin: 0 20rpx;
  margin-bottom: 30rpx;
}

.switch-content .content .switch .name{
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #b87e2a;
}

.switch-content .content .switch .addr,
.switch-content .content .switch .date-wrap{
  margin-bottom: 20rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #222;
  border-bottom: 1px solid #bbb;
  padding-bottom: 8rpx
}

.switch-content .content .switch .addr .addr-detail {
  width: 80%;
  overflow: hidden;
  white-space: nowrap;
}

.switch-content .content .switch .addr .select-addr {
  color: #b87e2a;
}

.switch-content .content .switch .date-wrap .days {
  height:50rpx;
  padding:  2rpx 15rpx;
  border: 1px solid #bbb;
  border-radius: 10rpx;
  text-align: center;
  line-height: 50rpx;
}

.switch-content .content .switch .date-wrap .end-date .name {
  text-align: right;
}

.switch-content .switch-btn {
  margin: 0 20rpx;
  display: flex;
  line-height: 2.2;
  display: -webkit-flex;
  justify-content: space-between;
}

.switch-content .switch-btn .btn {
  flex: 1;
  padding: 12rpx 0;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  border-radius: 8rpx;
}

.switch-content .switch-btn .search-btn {
  background-color: #6b7acc;
}

.switch-content .switch-btn .quick-btn {
  margin-left: 20rpx;
  background-color: #8e8a8a;
}

.title {
  padding: 20rpx 0;
  color: #101010;
  font-size: 28rpx;
  text-align: center;
  background-color: #f9f5f5;
}

.section-picker{
  margin: 0 20rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  background-color: #f9f5f5;
}

.section-picker .picker-wrapper{
  width: 200rpx;
  height: 50rpx;
  padding: 2px 0;
  font-size: 28rpx;
  color: #888;
  text-align: center;
  background-color: #e2dcdc;
  border-radius: 20rpx;
  border-bottom: 1px solid #f3f3f3;
}
.section-picker .picker-wrapper .location,
.section-picker .picker-wrapper .picker{
  color: #353535;
  font-weight: bold;
}
.section-picker .picker-wrapper image{
  width: 10px;
  height: 5px;
  margin-left: 20rpx;
  vertical-align: middle;
}

.section-select{
  margin-bottom: 4px;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  font-family: "MicrosoftYaHei";
  border-bottom: 1px solid #f3f3f3;
  background-color: #f9f5f5;
}
.section-select .select-item.active{
  color: #fff;
  background-color: #3871a8;
}
.section-select .select-item{
  width: 140rpx;
  margin: 8px 0;
  line-height: 25px;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  border-radius: 15px;
  background-color: #dfdfdf;
}
.section-product .reco-title{
  padding: 20px 0;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
}
.section-product .reco-title .title{
  margin: 0 10px;
  color: #a1a1a1;
  font-size: 16px;
}
.section-product .reco-title .line{
  width: 160rpx;
  height: 1px;
  background-color: #ededed;
}
.section-product .reco-title .title image{
  width: 15px;
  height: 16px;
  margin-right: 6px;
  vertical-align: middle;
}
.load-more{
  padding: 20px 0;
  font-size: 28rpx;
  text-align: center;
}
.load-over{
  padding: 20px 0;
  color: #999;
  text-align: center;
  font-size: 28rpx;
}