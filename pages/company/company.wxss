/* pages/company/company.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
}
.weui-cell{
  margin-right: 15px;
  padding: 0px;
  height: 50px;
  padding-left: 15px;
  line-height: 50px;
  font-size: 32rpx;
  justify-content: space-between;
}
.weui-cell .unit-input{
  margin-right: 80rpx;
}
.picker-wrapper .picker,
.weui-cell .weui-input{
  color: #353535;
}
.weui-cell .weui-input{
  width: 480rpx;
}
.weui-cells{
  margin-bottom: 20rpx;
}
.weui-cells::before,
.weui-cells::after{
  border:none;
}
.submit-btn{
  padding: 0 15px;
  margin-bottom: 20rpx;
}
.submit-btn .btn{
  height: 45px;
  line-height: 45px;
  width: 100%;
  color: #fff;
  font-size: 16px;
}
.submit-btn .submit{
  margin-bottom: 20rpx;
  background-color: #3871a8;
}
.submit-btn .invite{
  color: #fff;
  background-color: #ff575c;
}
.company-tip{
  padding: 10px 15px;
  line-height: 24px;
  text-indent: 20px;
  color: #333;
  font-size: 28rpx;
  background-color: #fff;
}
.submit-btn button.btn-hover-confirm{
  color: rgba(255, 255, 255, 0.6);
  background-color: #1662ab;
}

.submit-btn button[disabled][loading][type=primary] {
  color: rgba(255,255,255,0.6);
  background-color: #1662ab;
}

.submit-btn button.btn-hover-invite{
  color: rgba(255, 255, 255, 0.6);
  background-color: #ff4349;
}