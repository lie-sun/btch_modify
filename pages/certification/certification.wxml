<!--pages/certification/certification.wxml-->
<view class="weui-cells weui-cells_after-title">
    <view bindtap='bindPhoneNum' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd">手机号码绑定</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">({{isPhoneCertStr}})</view>
    </view>
</view>
<view class="weui-cells weui-cells_after-title">
    <view bindtap='bindCert' class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__bd">个人身份证认证</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">({{isUserCertStr}})</view>
    </view>
</view>
