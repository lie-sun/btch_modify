/* pages/user/user-feedback/user-feedback.wxss */
page{
  background-color: #f2f2f2;
}
.content .view-wrapper{
  margin-bottom: 10px;
  padding-bottom: 10px;
  background-color: #fff;
}
.content .view-wrapper .btn-wrapper{
  padding: 0 15px;
}
.content .view{
  margin-bottom: 10px;
  padding:10px 15px 0 15px;
}
.content .view textarea{
  width: 100%;
  height: 8em;
  padding: 5px;
  box-sizing: border-box;
  font-size: 14px;
  line-height: 20px;
  border-radius: 10px;
  background-color: #f2f1f6;
}
.content .submit{
  height: 40px;
  line-height: 40px;
  color: #fff;
  font-size: 16px;
  background-color: #3871a8;
  border-radius:5px;
}
.content button.btn-hover,
.content button.submit[loading][disabled]{
  color: rgba(255,255,255,0.6);
  background-color: #1662ab;
}

.rules{
  padding: 8px 15px;
  margin-bottom: 10px;
  background-color: #fff;
}
.rules .title,
.winner-wrapper .title{
  font-size: 14px;
  font-weight: bold;
}
.winner-wrapper .title{
  margin-bottom: 10px;
}
.rules .rules-wrapper{
  padding: 4px 10px;
  font-size: 24rpx;
}
.rules .rules-list{
  line-height: 30px;
}
.winner-wrapper{
  padding: 10px 15px;
  background-color: #fff;
}
.winner-list .item{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 8px;
  font-size: 28rpx;
  border-bottom: 1px solid #d7d7d7;
}
.winner-list .item .item-phone{
  color: #333;
}
.winner-list .item .item-name{
  width: 60px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.winner-list .item .item-time{
  color: #999;
}