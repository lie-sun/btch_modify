page,
.container{
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}
.section-picker{
  display: flex;
  display: -webkit-flex;
  flex-wrap: nowrap;
  justify-content: center;
  background-color: #fff;
}
.section-picker .picker-wrapper{
  width: 33.33%;
  padding: 10px 0;
  font-size: 32rpx;
  color: #888;
  text-align: center;
}
.section-picker .picker-wrapper .location,
.section-picker .picker-wrapper .picker{
  color: #353535;
  font-weight: bold;
}

.section-picker .picker-wrapper .gray{
  color:#888;
  font-weight: normal;
}

.section-picker .picker-wrapper image{
  width: 10px;
  height: 5px;
  margin-left: 20rpx;
  vertical-align: middle;
}

.service-content{
  padding:0 10px 64px 10px;
}

.service-content .service-item{
  margin-bottom: 24rpx;
  background-color:#fff;
  border-radius:8px;
  box-shadow:2px 2px 4px rgba(0,0,0,0.2);
  padding: 20rpx 10rpx;
}

.service-content .service-item:first-child{
  margin-top: 24rpx;
}

.service-content .service-item .item{
  margin-bottom: 20rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
}

.service-content .service-item .item:last-child{
  margin-bottom: 0px;
}

.service-content .service-item .item image{
  width: 64rpx;
  height: 64rpx;
  flex: 0 0 64rpx;
  display: block;
  margin-right: 4rpx;
}

.service-content .service-item .product-item .proxy,
.service-content .service-item .area-item .proxy{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
}

.service-content .service-item .product-item .proxy .proxy-name,
.service-content .service-item .area-item .proxy .proxy-name{
  white-space: nowrap;
}

.service-content .service-item .product-item .proxy .proxy-wrapper,
.service-content .service-item .area-item .proxy .proxy-wrapper{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  flex-wrap: wrap;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.service-content .service-item .product-item .proxy-item,
.service-content .service-item .product-item .area-item,
.service-content .service-item .area-item .proxy-item{
  margin-left: 12rpx;
  margin-bottom:4rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 4px;
  line-height: 1.8;
  background-color: #3399cc;
}

.service-content .service-item .area-item .proxy-item{
  background-color: #e90b0b;
}

.service-content .service-item .address-item .address{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
}

.service-content .service-item .address-item .address .address-detail{
  width: 450rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.service-content .service-item .company-item .company{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
}

.service-content .service-item .company-item .company .auth{
  width: 120rpx;
  text-align: center;
  color: rgb(190, 190, 190);
}

.service-content .service-item .company-item .company .company-name{
  width: 440rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.service-content .service-item .company-item .company .auth.auth-bg{
  color: #339900;
}

.service-content .service-item .company-item .company .auth.auth-bgc{
  color: #FF3333;
}

.service-content .service-item .concat-item .phone-part{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  margin-left: 40rpx;
}

.service-content .service-item .address-item .address .address-go{
  color: #868686;
}

.btn{
  position: fixed;
  width: 80%;
  left: 10%;
  bottom: 20px;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-between;
}
.btn button{
  width: 100%;
  height: 45px;
  margin: 0px;
  line-height: 45px;
  color: #fff;
  font-size: 16px;
  border-radius: 5px;
  background-color: #169bd5;
}
.btn button.btn-hover{
  color: rgba(255,255,255,0.6);
  background-color: #108bc1;
}

.no-result{
  padding-top:200rpx;
  font-size:32rpx;
  color:#999;
  text-align:center;
}