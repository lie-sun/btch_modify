/* pages/user/service-site/auth-phone/auth-phone.wxss */
page,
.container{
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

.auth-content{
  padding: 0 15px;
  margin-bottom: 80rpx;
}

.auth-content .auth{
  margin-bottom: 24rpx;
  background-color:#fff;
  border-radius:8px;
  box-shadow:2px 2px 4px rgba(0,0,0,0.2);
  padding: 20rpx 30rpx;
  position: relative;
}

.auth-content .auth.auth-addr{
  display:flex;
  display:-webkit-flex;
  align-items:center;
  justify-content:space-between;
}

.auth-content .auth .address .content{
  width:450rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}

.auth-content .auth.auth-phone{
  display: flex;
  display: -webkit-flex;
  justify-content:space-between;
  flex-direction:row;
  align-items:center;
}

.auth-content .auth .get-sms{
  height:48rpx;
  line-height:48rpx;
  padding: 2px 10px;
  color: #fff;
  font-size: 28rpx;
  border-radius: 14px;
  background-color: #ff3300;
}

.auth-content .auth:first-child{
  margin-top: 24rpx;
}

.auth-content .auth .service-title{
  margin-bottom:20rpx;
  font-size: 32rpx;
  color: #FF3333;
}

.auth-content .auth .content{
  font-size: 28rpx;
  color: #353535;
}

.auth-content .auth .auth-pic{
  width: 18px;
  height: 17px;
  display: block;
  position: absolute;
  top: 0;
  right: 100rpx;
  z-index: 99;
}

.auth-content .auth-proxy .proxy-item{
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
}

.auth-content .auth-proxy .proxy-item .content{
  margin-left: 16rpx;
}

.auth-content .auth-proxy .proxy-item .content:first-child{
  margin-left: 0px;
}

.auth-content .auth-phone .send-code{
  height:48rpx;
  line-height:48rpx;
  padding:2px 10px;
  white-space: nowrap;
  color:#fff;
  font-size:28rpx;
  border-radius:14px;
  background-color:#ff3300;
}

.confirm-btn{
  padding: 0 15px;
}

.confirm-btn button{
  width: 100%;
  height: 45px;
  margin: 0px;
  line-height: 45px;
  color: #fff;
  font-size: 16px;
  border-radius: 5px;
}

.confirm-btn button.confirm{
  background-color: #169bd5;
}

.confirm-btn button.btn-hover-confirm{
  color: rgba(255,255,255,0.6);
  background-color:#0b8ac1;
}
