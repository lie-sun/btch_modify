/* pages/user/service-site/auth-proxy/auth-proxy.wxss */
@import '../auth-phone/auth-phone.wxss';
.auth-content .auth .auth-box{
  width: 217px;
  height: 137px;
  margin: 0 auto;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #868686;
  font-size: 28rpx;
  border: 1px dashed #868686;
}

.auth-content .auth .auth-box image{
  width: 60px;
  height: 60px;
  display: block;
  margin-bottom: 16rpx;
}

.auth-content .auth .pic-box{
  width: 217px;
  height: 137px;
  margin: 0 auto;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.auth-content .auth .pic-box .del_pic{
  width: 24px;
  height: 24px;
  position: absolute;
  z-index: 99;
  top: 0;
  right: 0;
}

.auth-content .auth .pic-box image{
  width: 100%;
  height: 100%;
  display: block;
}
