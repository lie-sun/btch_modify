/* pages/user/user.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}
.user-header{
  margin-bottom: 10px;
  background-color: #fff;
}
.weui-cell{
  margin-bottom: 10px;
  font-size: 32rpx;
}
.weui-cell::before,
.weui-cells::after,
.weui-cells::before{
  border: none;
}
.weui-cell__account{
  color: #F95E5A;
}
.weui-cell__bd{
  margin-left: 18rpx;
}
.user-wrapper{
  padding: 20px 15px;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.user-info{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
}
.user-info .user-avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  box-shadow: 2px 2px 4px rgb(207, 207, 207),-2px -2px 4px rgb(207, 207, 207);
}
.user-info .user-avatar image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: block;
}
.user-info .user-name{
  margin-left: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #353535;
  background-color: #fff;
}
.user-info .user-name::after{
  border: none;
}
.button-hover{
  color: #353535;
}
.user-cert{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
}
.user-cert .cert{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.user-cert .cert image.cert-pic{
  width: 80rpx;
  height: 80rpx;
}
.user-cert .cert .active{
  color: #ff6600;
}
.user-cert .person-cert{
  margin-right: 40rpx;
}