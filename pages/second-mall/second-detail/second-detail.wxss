/* pages/rent/rent-detail/rent-detail.wxss */
page{
  width: 100%;
  height: 100%;
  font-family: "Microsoft YaHei";
  background-color: #f7f7f7;
}
.swiper-section swiper-item image{
  width: 100%;
  height: 100%;
  display: block;
}
.goods-info{
  padding: 20px 15px;
  margin-bottom: 10px;
  background-color: #fff;
}
.goods-info .goods-name{
  margin-bottom: 8px;
  color: #353535;
  font-size: 16px;
  font-weight: bold;
}
.goods-info .goods-rent_count{
  margin-bottom: 8px;
}
.goods-info .goods-rent_count .goods-rent{
  margin-bottom: 8px;
  color: #ff585e;
  font-size: 12px;
}
.goods-info .goods-rent_count .goods-rent .goods-day_rent{
  margin-right: 4px;
  font-size: 18px;
  font-weight: bold;
}
.goods-rent_count .goods-rent .goods-day_rent .mark{
  font-size: 12px;
  font-weight: bold;
}
.goods-info .goods-rent_count .goods-count{
  float: right;
  color: #888;
  font-size: 14px;
}
.goods-info .goods-deposit_addr{
  color: #888;
  font-size: 14px;
}
.goods-info .goods-deposit_addr .goods-addr{
  float: right;
}

.page{
  padding-bottom: 40px;
  background-color: #fff;
}
weui-navbar__title{
  color: #353535;
}
.weui-navbar__item.weui-bar__item_on{
  color: #3871a8;
}
.weui-navbar__slider{
  width: 25%;/*3.2em;*/ 
  height: 2px;
  /* margin-left: -1.6em; */
  background-color: #3871a8;
}
.weui-tab__content{
  padding: 25px 15px 45px 15px;
  color: #888;
  font-size: 14px;
}
.weui-tab__content .item{
  margin-bottom: 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.weui-tab__content .item:last-child{
  margin-bottom: 0px;
}
.contact-btn{
  width: 80%;
  position: fixed;
  left: 10%;
  bottom: 20px;
}
.contact-btn .contact{
  height: 45px;
  line-height: 45px;
  color: #fff;
  font-size: 16px;
  border-radius: 5px;
  background-color: #3871a8;
}
.contact-btn button[loading][disabled]{
  color: rgba(255,255,255,0.6);
  background-color: #1463af;
}
.contact-btn button.btn-hover{
  color: rgba(255,255,255,0.6);
  background-color: #1463af;
}
.desc{
  color: #353535;
  text-indent: 2em;
  font-size: 28rpx;
  line-height: 25px;
}