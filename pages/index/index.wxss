.container{
  height: 100%;
}
scroll-view{
  height: 100%;
}
.banner-img{
  width:100%;
  height:100%;
  display: block; 
} 
.icon-wrapper{
  width: 100%;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background-color: #f5f5f5;
}

.icon-wrapper .icon{
  width: 20%;
  float: left;
  text-align: center;
}
.icon-wrapper .icon-item{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}
.icon-wrapper .icon-item text{
  color:#000;
  font-size: 28rpx;
  line-height: 2;
}
.icon-wrapper .icon-item image{
  width: 116rpx;
  height: 116rpx;
  margin: 0 auto;
  display: block;
}
.show-item{
  position: relative;
}
.show-item image{
  width:100%;
  display: block;
}
.show-item .image-wrapper{
  position: absolute;
  bottom: 40px;
  right: 0px;
}
.show-item .image-wrapper .tel{
  margin-bottom: 2px;
}
.show-item .image-wrapper image{
  width: 42px;
  height: 42px;
  display: block;
}
.icon-btn button{
  padding: 0px;
  background-color: #f5f5f5;
}
.icon-btn button::after{
  border: none !important;
}