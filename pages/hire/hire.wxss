.container{
  padding-bottom: 20px;
  background-color: #f7f7f7;
  position: relative;
}
.ad-pic image{
  width: 100%;
  height: 100%;
  display: block;
}
.mask{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 999;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.2);
} 
.pic-wrapper{
  margin: 10px 0;
  display: flex;
  display: -webkit-flex;
  flex-wrap: wrap;
  background-color: #fff;
}
.pic-wrapper .example{
  display:flex;
  display:-webkit-flex;
}
.pic-wrapper .pic{
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
}
.pic-wrapper .example-pic{
  width: 100px;
  flex: 0 0 100px;
  height: 120px;
  padding: 12px 0;
  margin-left: 12px;
  position: relative;
}
.pic-wrapper .example-pic image{
  width: 100%;
  height: 100%;
  display: block;
}
.pic-wrapper .example-pic .example-txt{
  position: absolute;
  bottom: 12px;
  left: 0;
  width: 100%;
  height: 24px;
  line-height: 24px;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  background-color: #15619D;
}
.pic-wrapper .pic image{
  width: 100%;
  height: 100%;
}
.product-info{
  margin-bottom: 20px;
  font-family: "Microsoft YaHei";
}
.picker-wrapper .tip,
.product-info .placeholder,
.weui-cell .weui-cell__ft{
  color: #bfbfbf;
}
.picker-wrapper .picker,
.weui-cell .weui-input{
  color: #353535;
}
.weui-cell .weui-input{
  margin-right: 15px;
}
.weui-cell .weui-label-add{
  color: #777;
}
.product-info .picker-wrapper image{
  width: 7px;
  height: 6px;
  float: right;
  margin-top: 15rpx; 
}
.product-info .upload-pic{
  margin-right: 8px;
}
.product-info .add{
  width: 23px;
  height: 23px;
}
.weui-cell{
  margin-right: 15px;
  padding: 0px;
  padding-left: 15px;
  height: 100rpx;
  display: flex;
  display: -webkit-flex;
  font-size: 32rpx;
  align-items: center;
  justify-content: space-between;
}
.weui-cell::before,
.weui-cells::before,
.weui-cells_after-title::after
{
  margin: 0;
  padding: 0;
  border: none;
}
.weui-cell::before{
  border-bottom: 1px solid #e5e5e5;
}
.weui-cell .unit-input{
  margin-right: 80rpx;
}
.weui-cell .select-addr{
  max-width: 500rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.weui-cell .select-addr.select{
  color: #353535;
}
.weui-label {
  width: 90px;
}
.weui-cells__title{
  color:#333;
}
.sample-graph{
  width: 200rpx;
  height: 200rpx;
  display: block;
}
.weui-uploader__del{
  width: 24px;
  height: 24px;
  position: absolute;
  z-index: 99;
  top: 0;
  right: 0;
}
.sample-graph__wrapper{
  margin-top: 2px;
  position: relative;
}
.example{
  margin-right: 20rpx;
  position: relative;
}
.example .example-txt{
  width:100%;
  padding:4rpx 0;
  position:absolute;
  bottom:0;
  text-align:center;
  font-size:24rpx;
  background-color:#15619D;
  color: #fff;
}

.location{
  color: #353535;
  font-weight: bold;
}
#remark-wrapper {
  height:6.5em;
  padding:8px 15px;
  margin-bottom: 10px;
}
#remark-wrapper .weui-textarea{
  height:6.5em;
  line-height:1.5;
}
.btn{
  padding: 0 15px;
}
button.sumit-check{
  width: 100%;
  height: 45px;
  line-height: 45px;
  color: #fff;
  font-size: 16px;
  border-radius: 5px;
  background-color: #3871a8;
}
button.sumit-check[loading][disabled]{
  color: rgba(255, 255, 255, 0.6);
  background-color: #1d66ad;
}
button.btn-hover{
  color: rgba(255, 255, 255, 0.6);
  background-color: #1d66ad;
}
