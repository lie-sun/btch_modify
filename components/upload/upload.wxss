@import "/weui.wxss";
.weui-uploader-box{
  width: 100px;
  height: 120px;
  padding: 12px 0;
  position: relative;
  box-sizing: border-box;
  float:left;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border:1px solid #f1f1f1;
  background-color: #f1f1f1;
}
.weui-uploader-box .weui-uploader-img{
  width: 35px;
  height: 35px;
}
.weui-uploader-box .add-img{
  font-size: 14px;
  color: #353535;
  font-family: "Microsoft YaHei";
}
.weui-uploader_example{
  width: 100px;
  height: 120px;
  position: relative;
}
.weui-uploader_example .weui-uploader__del{
  width: 24px;
  height: 24px;
  position: absolute;
  z-index: 99;
  top: 0;
  right: 0;
}
.weui-uploader_example .weui-uploader__img{
  width: 100px;
  height: 120px;
}
.weui-uploader_example .weui-uploader_example-text{
  width: 100%;
  height: 20px;
  line-height: 20px;
  position: absolute;
  bottom: 0;
  color: #fff;
  font-size: 12px;
  text-align: center;
  box-sizing: border-box;
  background-color: #15619D;
}
.weui-uploader__file{
  margin-right: 10px;
}